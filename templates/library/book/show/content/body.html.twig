{% set book = hookable_metadata.context.book %}

<div class="page-body">
    <div class="container-xl">
        <div class="row">
            <div class="col-12 col-lg-3">
                <img src="{{ book.cover }}">
            </div>
            <div class="col-12 col-lg-3">
                <h2>{{ book.title }}</h2>
                <p>
                    {{ book.description }}
                </p>
                <ul>
                    <li><strong>Pages:</strong> {{ book.pages }}</li>
                    <li><strong>OriginalTitle:</strong> {{ book.originalTitle }}</li>
                </ul>
            </div>
        </div>
    </div>
</div>
